{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "typeRoots" : [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  }
}
