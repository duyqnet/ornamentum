{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots" : [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/library/**/*.ts"
  ],
  "exclude": [
    "example",
    "environments",
    "node_modules",
    "demo",
    "dist",
    "lib",
    "e2e",
    ".tmp",
    "webpack-umd.config.ts"
  ]
}
